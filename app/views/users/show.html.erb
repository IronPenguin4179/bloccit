 <div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>
 
 <h2>Posts</h2>
 <% if @user.posts %>
  <%= render @user.posts %>
 <% else%>
  <%= "#{user.name} has not submitted any posts yet." %>
 <% end %>
 
 <h2>Comments</h2>
 <% if @user.comments %>
  <%= render @user.comments %>
 <% else%>
  <%= "#{user.name} has not submitted any comments yet." %>
 <% end %>
 
 <h2>Favorited Posts</h2>
  <% @user.favorites.each do |favorite_post| %>
   <div class="media">
    <%= render partial: 'votes/voting', locals: { post: favorite_post.post } %>
    <% avatar_url = favorite_post.post.user.avatar_url(64) %>
    <% if avatar_url %>
     <div class="media-left">
      <%= image_tag avatar_url, class: 'media-object' %>
     </div>
    <% end %>
    <div class="media-body">
     <h4 class="media-heading">
      <%= link_to favorite_post.post.title, topic_post_path(favorite_post.post.topic, favorite_post) %>
     </h4> 
     <small>
      <%= favorite_post.post.comments.count %> Comments
     </small>
   </div>
  </div>
 <% end %>